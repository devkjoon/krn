<section class="container">
  <h3 class="Workout-name">{{Workout.name}}</h3>
  <h4>Opening Hour: {{format_time Workout.starting_date}}</h4>
  <h4>Closing Hour: {{format_time Workout.ending_date}}</h4>
  <section class="flex-row justify-center">
    {{#each Workout.Exercises as |Exercises|}}
    {{> Exercises-details}}
    {{/each}}
  </section>
</section>